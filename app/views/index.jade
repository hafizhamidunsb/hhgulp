include modules/_header
include modules/_footer

extends layouts/_default

block vars
  - var bodyClass = 'index';
  
block content
  +header(class="bg-header transparent-light", data-pages-header="autoresize", data-pages-resize-class="light-solid")

  section.jumbotron.full-vh(data-pages='parallax')
    .inner.full-vh

      #hero.swiper-container
        .swiper-wrapper

          .swiper-slide.fit.bg-master-darkest
            .slider-wrapper
              .background-wrapper(data-swiper-parallax='20%')
                .background.bg-position-center.hidden-xs.hidden-sm(data-pages-bg-image='/assets/images/hero/hh1.jpg', data-bg-overlay-class='bg-master-darker', data-overlay-opacity='0.7', draggable='false')
                .background.bg-position-left.visible-xs.visible-sm(data-pages-bg-image='/assets/images/hero/hh3.jpg', data-bg-overlay-class='bg-master-darker', data-overlay-opacity='0.7', draggable='false')

            .content-layer
              .inner.full-height
                .container-xs-height.full-height
                  .col-xs-height.col-middle
                    .container.text-center.text-white
                      h1.no-orphan(data-pages-animation='standard', data-delay='1100', data-type='transition.slideDownIn')
                        | Discover the 
                        b(data-pages-init='text-rotate', data-speed='3000', data-animation='flipUp') Insight,Music,Apparel,Work
                        
                      h3.m-t-20
                        a.link.watchvid(href="#")
                          | Newest music video "Penyelamat" 
                          i.ti-arrow-right

          // data-pages-header="alternate"
          .swiper-slide.fit.bg-black
            .slider-wrapper

            .content-layer
              .inner.full-height
                .container-xs-height.full-height
                  .col-xs-height.col-middle
                    // VIDEO
                    div(data-fitvids).
                      <iframe id="penyelamat" src="https://player.vimeo.com/video/139725789?title=0&byline=0&portrait=0" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

        .mouse-wrapper
          .mouse
            .mouse-scroll

        .swiper-navigation.swiper-rounded.swiper-white-solid.swiper-button-prev.auto-reveal
        .swiper-navigation.swiper-rounded.swiper-white-solid.swiper-button-next.auto-reveal

  section.bg-master-darkest.text-white
    .container
      .row
        .col-sm-10.col-sm-offset-1.p-t-100.p-b-100.xs-padding-50.text-center
          h5.block-title.text-master Meet Hafiz Hamidun
          h2.m-t-10.no-orphan.text-master-light
            b Selamat datang. Welcome. 
            i Ahlan Wasahlan. Bienvenue. Willkommen.
          p.text-master-lightest
            | This is the home of Hafiz Hamidun in the world wide web; all information regarding albums, singles, shows, concerts and the fashion line can be found here.

  section.p-t-60.p-b-60.bg-master(data-pages='parallax', data-pages-bg-image='/assets/images/hero/hh4-2.jpg', data-bg-overlay-class='bg-master-dark', data-overlay-opacity='0.8')
    .container
      .row
        .col-sm-12
          .social-count
            .col-sm-4
              a.margin-10.c-facebook(href='https://www.facebook.com/hafizhamidun', target='_blank')
                .progress-circle-indeterminate.progress-circle-white
                span.wrapper
                  i.icon-facebook
                  h3.count
                  p likes
            .col-sm-4
              a.margin-10.c-twitter(href='https://twitter.com/hafizhamidun', target='_blank')
                .progress-circle-indeterminate.progress-circle-white
                span.wrapper
                  i.icon-twitter
                  h3.count
                  p followers
            .col-sm-4
              a.margin-10.c-instagram(href='https://instagram.com/hafizhamidun', target='_blank')
                .progress-circle-indeterminate.progress-circle-white
                span.wrapper
                  i.icon-instagram
                  h3.count
                  p followers
            .col-sm-4
              a.margin-10.c-youtube(href='https://youtube.com/user/HafizHamidunVEVO', target='_blank')
                .progress-circle-indeterminate.progress-circle-white
                span.wrapper
                  i.icon-youtube
                  h3.count
                  p subscribers
            .col-sm-4
              a.margin-10.c-spotify(href='https://open.spotify.com/artist/6DgMaXR0c070BQWs9VyuNB', target='_blank')
                .progress-circle-indeterminate.progress-circle-white
                span.wrapper
                  i.icon-spotify
                  h3.count
                  p followers
            .col-sm-4
              a.margin-10.c-soundcloud(href='https://www.soundcloud.com/hafizhamidun', target='_blank')
                .progress-circle-indeterminate.progress-circle-white
                span.wrapper
                  i.icon-soundcloud
                  h3.count
                  p followers

  section.p-b-50.p-t-50.bg-master-darkest.text-white
    .container.p-b-50.p-t-50
      .col-md-8.col-md-offset-2
        .col-middle
          .text-center
            h1.text-master-light.m-b-10.xs-m-b-20
              b Sound is divine.
              | 
              i Music is man-made.
            h6.margin-0.m-b-30.text-master-dark.block-title That's how art connects to our spirituality.
            a.btn.btn-lg.btn-info.btn-rounded.block-title.text-white.margin-5(href='/music') Explore Works
            a.btn.btn-lg.btn-primary.btn-rounded.block-title.text-white.margin-5(href='/profile') Hafiz's Profile

  section.instagram-feed.bg-master
    .instagram-isotope
      .grid-sizer

  +footer
