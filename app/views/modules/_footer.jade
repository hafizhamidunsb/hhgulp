mixin footer
  // START FOOTER
  footer.p-b-50.p-t-50.bg-master.text-white()&attributes(attributes)
    .container
      .row
        .col-sm-4.text-center.links.sm-p-b-20
          h5.text-white.muted.block-title Quicklinks
          .m-t-20.m-b-20
            ul
              li
                a(href='/') Home
              li
                a(href='/music') Music
              li
                a(href='/profile') Profile
              li
                a(href='/contact') Contact
              li
                a(href='http://arteffects.international', target='_blank') Arteffects International

        .col-sm-4.text-center.b-l.b-r.sm-p-b-10
          h5.text-white.muted.block-title Get Social
          .m-t-20.m-b-20
            ul.social-links.no-margin
              li
                a.social-icon.si-borderless.si-small.si-facebook(href="https://www.facebook.com/hafizhamidun", target="_blank", title="Facebook")
                  i.icon-facebook
              li
                a.social-icon.si-borderless.si-small.si-twitter(href="https://twitter.com/hafizhamidun", target="_blank", title="Twitter")
                  i.icon-twitter
              li
                a.social-icon.si-borderless.si-small.si-instagram(href="https://instagram.com/hafizhamidun", target="_blank", title="Instagram")
                  i.icon-instagram
              li
                a.social-icon.si-borderless.si-small.si-youtube(href="https://www.youtube.com/hafizhamidun", target="_blank", title="Youtube")
                  i.icon-youtube
                  
        .col-sm-4.text-center.copyright
          h5.text-white.muted.block-title HafizHamidun.com
          .m-t-20.m-b-20
            p.margin-0.hint-text Copyright &#169; 2015.
            p.margin-0.muted All Rights Reserved.
  // END FOOTER
